@using MyCV.Models.Entity
@model List<TblHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-container mt-4 ms-md-5">
    <h2 class="mb-4">Projelerim</h2>
    @foreach (var item in Model)
    {
        <div class="card mb-4 border border-secondary-subtle rounded-3 shadow-sm">
            <div class="card-header bg-light d-flex">
                <h3 class="mb-0 flex-grow-1">@item.Baslik</h3>
                <div class="text-end">
                    <a href="/projeler/ProjeDüzenle/@item.ID" class="btn btn-sm btn-primary me-1">Düzenle</a>
                    <a href="/projeler/ProjeSil/@item.ID"
                       onclick="return confirm('Bu projeyi silmek istediğinize emin misiniz?')"
                       class="btn btn-sm btn-outline-danger">Sil</a>

                </div>
            </div>


            <div class="card-body bg-white">
                <p class="card-text text-muted">
                    @item.Aciklama1
                </p>
            </div>
            <div class="card-footer bg-light">
                <span class="badge bg-primary me-1">@item.Etiket</span>
            </div>
        </div>
    }
    <div class="text-end mt-3">
        <a href="/projeler/ProjeEkle" class="btn btn-success">
            Yeni Proje Ekle
        </a>
    </div>


</div>


