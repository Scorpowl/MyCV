@using MyCV.Models.Entity
@model List<TblHobilerim>


<div class="container-fluid mt-4 ps-3 pe-3">

    <h2 class="mb-4">Projelerim</h2>
    @foreach (var item in Model)
    {
        <div class="card mb-4 border border-secondary-subtle rounded-3 shadow-sm">
            <div class="card-header bg-light d-flex">
                <h3 class="mb-0 flex-grow-1">@item.Baslik</h3>
            </div>


            <div class="card-body bg-white">
                <p class="card-text text-muted">
                    @item.Aciklama1
                </p>
            </div>
            <div class="card-footer bg-light">
                <span class="badge bg-primary me-1">@item.Etiket</span>
            </div>
        </div>
    }
    


</div>
